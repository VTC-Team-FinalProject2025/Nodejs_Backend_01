enum MessageTypeStatus {
  channel
  direct
}

model File {
  id          Int               @id @default(autoincrement())
  uploaderId  Int
  messageType MessageTypeStatus @default(channel)
  fileType    String
  messageId   Int?
  field       String
  createdAt   DateTime          @default(now())

  User Users @relation("UserFiles", fields: [uploaderId], references: [id], onDelete: Cascade)

  @@map("file")
}
